<Window x:Class="LeapIN.ControlPanel.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Control Panel" Height="300" Width="500" ResizeMode="NoResize" Background="#222">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Background="#282828" BorderThickness="0" TabStripPlacement="Left" Margin="-2,-2,0,0">
            <TabItem Style="{StaticResource TabItemStyle}" Header="Getting Started">
                
            </TabItem>
            <TabItem Style="{StaticResource TabItemStyle}" Header="Pointer Settings">

            </TabItem>
            <TabItem Style="{StaticResource TabItemStyle}" Header="Keyboard Settings">

            </TabItem>
        </TabControl>
        <Border Grid.Row="1" Background="#222">
            <Button  Content="Start/Stop" Command="{Binding ChangeState}" Width="85" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5" />
        </Border>
    </Grid>
</Window>
