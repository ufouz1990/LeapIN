<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- This file is the default colour themes for all colours within the application, 
    if you want to create a new theme you need to duplicate this file and rename it, 
    then change the name of the loaded file inside ResourceLibrary.xaml-->
    
    <!-- Control Panel Colours -->
    <SolidColorBrush x:Key="CPBackground" Color="#FFE0E0E0" />
    <SolidColorBrush x:Key="CPTabControlBackground" Color="#FFE9E9E9" />
    <SolidColorBrush x:Key="CPBottomStripBackground" Color="#FAAA" />
    <SolidColorBrush x:Key="CPTextColour" Color="#F111" />
    <SolidColorBrush x:Key="CPButtonHover" Color="#FCCC" />
    <SolidColorBrush x:Key="CPButtonPress" Color="#F888" />


    <!-- Overlay Colours -->
    <SolidColorBrush x:Key="OLKBBackground" Color="#FAAA" />
    <SolidColorBrush x:Key="OLMouseTouching" Color="#F0C0" />
    <SolidColorBrush x:Key="OLMouseNotTouching" Color="#FC00" />
    <SolidColorBrush x:Key="OLTextColour" Color="#F111" />
    <SolidColorBrush x:Key="OLButtonBackground" Color="#FFE0E0E0" />
    <SolidColorBrush x:Key="OLButtonHover" Color="#FCCC" />
    <SolidColorBrush x:Key="OLButtonPress" Color="#F888" />

</ResourceDictionary>